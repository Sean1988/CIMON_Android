<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/gradient_grey"
	android:padding="5dip"
>

	<ToggleButton
		android:layout_height="38dip"
		android:layout_width="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:id="@+id/toggleMetric"
		android:minWidth="36dip"
		android:height="30dip"
		android:textStyle="normal"
		android:typeface="normal"
		android:textSize="11dip"
		android:gravity="top|center_horizontal"
		android:padding="0dip"
		android:layout_margin="2dip"
		android:textOn="Disable"
		android:textOff="Enable" />
	<TextView
		android:id="@+id/title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/toggleMetric"
		android:layout_alignParentTop="true"
		android:text="Frequency"
		android:textSize="11dip"
		android:padding="2dip"
		android:textStyle="normal"
		android:typeface="normal"
		android:textColor="#e4e4e4" />
	<TextView
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_alignBottom="@+id/title"
		android:layout_width="wrap_content"
		android:text="1.000 Hz"
		android:id="@+id/frequency"
		android:textSize="11dip"
		android:padding="2dip"
		android:textStyle="normal"
		android:typeface="normal"
		android:textColor="#e4e4e4" />
	<SeekBar
		android:id="@+id/freqbar"
		android:layout_below="@+id/title"
		android:layout_alignLeft="@+id/title"
		android:layout_alignRight="@+id/frequency"
		android:max="200"
		android:progress="100"
		style="@style/Widget.SeekBar"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:padding="4dip"
		android:maxHeight="12dip"
		android:minHeight="12dip"
		android:layout_margin="1dip" />
	<TextView
		android:layout_below="@+id/freqbar"
		android:layout_height="wrap_content"
		android:text="100"
		android:layout_width="wrap_content"
		android:id="@+id/label100"
		android:layout_alignRight="@+id/freqbar"
		android:textSize="6dip"
		android:padding="0dip"
		android:textStyle="normal"
		android:typeface="normal"
		android:textColor="#e4e4e4" />
	<TextView
		android:layout_below="@+id/freqbar"
		android:layout_height="wrap_content"
		android:text="1"
		android:layout_width="wrap_content"
		android:id="@+id/label1"
		android:layout_alignLeft="@+id/freqbar"
		android:layout_alignRight="@+id/freqbar"
		android:gravity="center"
		android:textSize="6dip"
		android:padding="0dip"
		android:textStyle="normal"
		android:typeface="normal"
		android:textColor="#e4e4e4" />
	<TextView
		android:layout_below="@+id/freqbar"
		android:layout_height="wrap_content"
		android:text="0.01"
		android:layout_width="wrap_content"
		android:id="@+id/label01"
		android:layout_alignLeft="@+id/freqbar"
		android:textSize="6dip"
		android:padding="0dip"
		android:textStyle="normal"
		android:typeface="normal"
		android:textColor="#e4e4e4" />
<!-- 		android:layout_alignBottom="@+id/toggleMetric" -->

</RelativeLayout>
