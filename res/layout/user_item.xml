<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:background="@drawable/gradient_black" android:padding="5dip">

	<TextView android:id="@+id/title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" android:text="@string/blank_holder"
		android:textSize="12dip" android:padding="2dip" android:textStyle="bold"
		android:typeface="normal" android:textColor="#e4e4e4" />
	<TextView android:id="@+id/value" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentRight="true"
		android:layout_alignParentTop="true" android:text="@string/blank_holder"
		android:textSize="10dip" android:padding="2dip" android:textStyle="normal"
		android:typeface="normal" android:textColor="#e4e4e4" />

	<TextView android:id="@+id/status" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentLeft="true"
		android:layout_below="@+id/title" android:text="@string/inactive"
		android:textSize="10dip" android:padding="2dip" android:textStyle="normal"
		android:typeface="normal" android:textColor="#e4e4e4" />
	<TextView android:id="@+id/power" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentRight="true"
		android:layout_alignTop="@+id/status" android:text="@string/power"
		android:textSize="10dip" android:padding="2dip" android:textStyle="normal"
		android:typeface="normal" android:textColor="#e4e4e4" />

</RelativeLayout>
